@page "/transactions"



<h3>Transactions Overview</h3>

<div class="card-container">
    @foreach (var year in LastThreeYears)
    {
        <div class="card m-3 p-2" @onclick="() => NavigateToYearTransactions(year)">
            <h4>@year Transactions</h4>
            <p>Click to view transactions for @year</p>
        </div>
    }
</div>

@code {
    private List<int> LastThreeYears { get; set; }

    protected override void OnInitialized()
    {
        // Get the current year and generate the last 3 years
        var currentYear = DateTime.Now.Year;
        LastThreeYears = Enumerable.Range(currentYear - 2, 3).Reverse().ToList();
    }

    private void NavigateToYearTransactions(int year)
    {
        // Navigate to the page displaying transactions for the selected year
        NavigationManager.NavigateTo($"transactions-view/{year}");
    }

}